pipeline {
    agent any
    tools {
        maven 'apache-maven-3.9.6'
    }

    options {
        timestamps()
    }
    environment {
        remote_ekl_backend_name = 'Desktop-AMD'
        remote_ekl_backend_host = '192.168.178.62'
//         credential_ssh_jenkins_user = credentials('SSH_Jenkins_User')
