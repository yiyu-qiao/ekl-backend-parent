pipeline {
    agent any

    tools {
        maven 'apache-maven-3.9.6'
    }

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }

    environment {
        registryNamespace="ponyworld"
        registryRepository="ekl-backend-ws"
        imageTag= sh(returnStdout:true, script:"date +%Y%m%dT%H%M%S").trim() //remove trailing newline
        imageName="${registryNamespace}/${registryRepository}:${imageTag}"
    }

    parameters {
        choice(name: 'buildImageTarget', choices: ['ekl-backend-ws', 'ekl-alpine-jre' ],
            description: 'select the target build stage of docker image, default ekl-backend-ws')

    }

    stages {
        stage('Init Git') {
            steps {
                script{ //Groovy syntax is allowed
                    def msg = sh(returnStdout:true, script:"""echo check out from Github Repository ${GIT_URL}
                                                              echo current branch ${GIT_BRANCH}""")
                    echo "Console output: ${msg}"
                }
            }
        }

        stage('Maven build'){
            when {
                equals
                    expected: "ekl-backend-ws",
                    actual: "${params.buildImageTarget}"
            }
            steps {
                    sh "java -version"
                    sh "mvn -DskipTests clean package"
            }
        }

        stage('Build Image'){
            if(${params.buildImageTarget} == 'ekl-backend-ws') {
                steps {
                    echo "Build docker images ekl-backend-ws"
                    sh """cd ekl-backend-ws
                          docker build -t ${imageName} .
                    """
                }
            } else {
                steps {
                    echo "Build docker images ekl-alpine-jre"
                }
            }
        }

        stage('Push Image'){
            if(${params.buildImageTarget} == 'ekl-backend-ws') {
                steps {
                    echo "Push image to Docker Hub"
                    script {
                        docker.withRegistry('','DOCKERHUB_TOKEN_PONYWORLD') {
                            sh """
                                docker push ${imageName}
                                docker image rm ${imageName}
                            """
                        }
                    }
                }
            } else {
                steps {
                    echo "Build docker images ekl-alpine-jre"
                }
            }
        }

//         stage('Deploy to Artifactory'){
